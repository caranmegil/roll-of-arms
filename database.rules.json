{
  "rules": {
    ".read": "auth.uid != null",
    "profiles": {
    	".write": "auth.uid != null && newData.exists() && newData.child(auth.uid).exists()",
      "$user_id": {
        ".write": "auth.uid != null && $user_id == auth.uid && newData.exists() && newData.child('name').exists()"
      }
    }
  }
}
