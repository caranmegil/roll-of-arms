{
  "rules": {
    ".write": false,
    ".read": false,
    "profiles": {
      ".read": true,
    	".write": "auth.uid != null && newData.exists() && newData.child(auth.uid).exists()",
      "$user_id": {
        ".write": "auth.uid != null && $user_id == auth.uid && newData.exists() && newData.child('name').exists()"
      }
    },
    "collections": {
      ".read": true,
    	".write": "auth.uid != null && newData.exists() && newData.child(auth.uid).exists()",
      "$user_id": {
        ".write": "auth.uid != null && $user_id === auth.uid && newData.exists()"
      }
    },
    "dice": {
      ".write": false,
      ".read": true
    },
    "usernames": {
      ".read": true,
      "$username": {
        ".read": true,
        ".write": "auth.uid != null"
      }
    }
  }
}
